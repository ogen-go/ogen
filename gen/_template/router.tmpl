func (s *Server) notFound(w http.ResponseWriter, r *http.Request) {
	http.NotFound(w, r)
}

// ServeHTTP serves http request as defined by OpenAPI v3 specification,
// calling handler that matches the path or returning not found error.
func (s *Server) ServeHTTP(w http.ResponseWriter, r *http.Request) {
	elem := r.URL.Path
	if len(elem) == 0 {
		s.notFound(w, r)
		return
	}

	{{- if gt $router.MaxParametersCount 0 }}
	args := [{{ $router.MaxParametersCount }}]string{}
	{{- end }}
	// Static code generated router with unwrapped path search.
	switch r.Method {
	{{- range $m := $router.Methods }}
	case "{{ $m.Method }}":
		{{- template "route_edge" router_elem $m.Tree.Root 0 }}
	{{- end }}
	}
	s.notFound(w, r)
}

// Route is route object.
type Route struct {
	name string
	args [{{ $router.MaxParametersCount }}]string
}

// OperationID returns OpenAPI operationId.
func (r Route) OperationID() string {
	return r.name
}

// Args returns parsed arguments.
func (r Route) Args() [{{ $router.MaxParametersCount }}]string {
	return r.args
}

// FindRoute finds Route for given method and path.
func (s *Server) FindRoute(method, path string) (r Route, _ bool) {
	var (
		args = [{{ $router.MaxParametersCount }}]string{}
		elem = path
	)
	r.args = args

	// Static code generated router with unwrapped path search.
	switch method {
	{{- range $m := $router.Methods }}
	case "{{ $m.Method }}":
		{{- template "find_edge" router_elem $m.Tree.Root 0 }}
	{{- end }}
	}
	return r, false
}

