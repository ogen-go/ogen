{{ define "route_handle_request" }}
{{- /*gotype: github.com/ogen-go/ogen/internal/ir.Operation*/ -}}
s.handle{{ $.Name }}Request([{{ $.PathParamsCount }}]string{
	{{- range $i, $_ := times $.PathParamsCount }}
