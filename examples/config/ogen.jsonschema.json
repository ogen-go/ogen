{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ogen Configuration Schema",
  "description": "JSON Schema for ogen code generator configuration",
  "type": "object",
  "properties": {
    "parser": {
      "type": "object",
      "description": "Parser configuration options",
      "properties": {
        "infer_types": {
          "type": "boolean",
          "description": "Enables type inference for schemas",
          "default": false
        },
        "allow_remote": {
          "type": "boolean",
          "description": "Enables remote references resolving",
          "default": false
        },
        "depth_limit": {
          "type": "integer",
          "description": "Maximum depth of schema generation",
          "minimum": 1,
          "default": 1000
        },
        "authentication_schemes": {
          "type": "array",
          "description": "Allowed authentication schemes",
          "items": {
            "type": "string",
            "enum": [
              "basic",
              "bearer",
              "concealed",
              "digest",
              "dpop",
              "gnap",
              "hoba",
              "mutual",
              "negotiate",
              "oauth",
              "privatetoken",
              "scram-sha-1",
              "scram-sha-256",
              "vapid"
            ]
          },
          "default": [
            "basic",
            "bearer",
            "concealed",
            "digest",
            "dpop",
            "gnap",
            "hoba",
            "mutual",
            "negotiate",
            "oauth",
            "privatetoken",
            "scram-sha-1",
            "scram-sha-256",
            "vapid"
          ]
        },
        "allow_cross_type_constraints": {
          "type": "boolean",
          "description": "Enables interpretation of cross-type schema constraints",
          "default": true
        },
        "disallow_duplicate_method_paths": {
          "type": "boolean",
          "description": "Enables strict duplicate normalized path checks",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "generator": {
      "type": "object",
      "description": "Generator configuration options",
      "properties": {
        "features": {
          "type": "object",
          "description": "Generator feature configuration",
          "properties": {
            "enable": {
              "type": "array",
              "description": "Features to enable (applied after disable)",
              "items": {
                "type": "string",
                "enum": [
                  "paths/client",
                  "paths/server",
                  "webhooks/client",
                  "webhooks/server",
                  "client/security/reentrant",
                  "client/request/options",
                  "client/request/validation",
                  "client/editors",
                  "server/response/validation",
                  "ogen/otel",
                  "ogen/unimplemented",
                  "debug/example_tests"
                ]
              },
              "default": [
                "paths/client",
                "paths/server",
                "webhooks/client",
                "webhooks/server",
                "ogen/otel",
                "ogen/unimplemented"
              ]
            },
            "disable": {
              "type": "array",
              "description": "Features to disable (applied before enable)",
              "items": {
                "type": "string",
                "enum": [
                  "paths/client",
                  "paths/server",
                  "webhooks/client",
                  "webhooks/server",
                  "client/security/reentrant",
                  "client/request/options",
                  "client/request/validation",
                  "client/editors",
                  "server/response/validation",
                  "ogen/otel",
                  "ogen/unimplemented",
                  "debug/example_tests"
                ]
              }
            },
            "disable_all": {
              "type": "boolean",
              "description": "Disable all features before applying disable and enable lists",
              "default": false
            }
          },
          "additionalProperties": false
        },
        "filters": {
          "type": "object",
          "description": "Operation filtering configuration",
          "properties": {
            "path_regex": {
              "type": "string",
              "description": "Regular expression to filter paths (if unset, all paths are accepted)\n"
            },
            "methods": {
              "type": "array",
              "description": "HTTP methods to keep (empty list means all methods are accepted)\n",
              "items": {
                "type": "string",
                "enum": [
                  "GET",
                  "POST",
                  "PUT",
                  "PATCH",
                  "DELETE",
                  "HEAD",
                  "OPTIONS",
                  "TRACE"
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "ignore_not_implemented": {
          "type": "array",
          "description": "Not implemented functions to ignore on generation",
          "items": {
            "type": "string"
          }
        },
        "convenient_errors": {
          "type": "string",
          "description": "Controls convenient error helper generation",
          "enum": [
            "on",
            "off",
            "auto"
          ],
          "default": "auto"
        },
        "content_type_aliases": {
          "type": "object",
          "description": "Maps exact content types to known encodings",
          "additionalProperties": {
            "type": "string"
          },
          "default": {
          }
        },
        "wildcard_content_type_default": {
          "type": "string",
          "description": "Default encoding for wildcard content types declared in spec (if unset, wildcard content types stay unsupported)\n"
        }
      },
      "additionalProperties": false
    },
    "expand": {
      "type": "string",
      "description": "Path to expanded spec file (if unset, writing expanded spec is disabled)\n"
    }
  },
  "additionalProperties": false
}
